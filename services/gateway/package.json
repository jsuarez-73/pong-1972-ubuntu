{
	"name": "@segfaultx/services/gateway",
	"scripts": {
		"build": "npx tsc && npx tsc-alias -p tsconfig.json",
		"start": "npm run build && node ./dist/service-bootstrap.js",
		"debug": "npm run build && node --env-file=../services-debug.env ./dist/service-bootstrap.js",
		"inspect": "npm run build && node --inspect-brk=${PORT:=9229} --env-file=../services-debug.env ./dist/service-bootstrap.js",
		"test": "npm run build && npx jasmine",
		"test-serverup": "npm run build && JASMINE_DEV=true npx jasmine",
		"debug-test": "npm run build && node --inspect-wait node_modules/.bin/jasmine",
		"clean": "rm -rf node_modules dist"
	},
	"dependencies": {
		"@fastify/http-proxy": "^11.3.0",
		"@segfaultx/http": "../../lib/http",
		"fastify": "^5.2.2"
	},
	"devDependencies": {
		"@types/jasmine": "^5.1.7",
		"@types/node": "^22.14.0",
		"jasmine": "^5.6.0",
		"tsc-alias": "^1.8.15",
		"typescript": "^5.8.3"
	}
}
