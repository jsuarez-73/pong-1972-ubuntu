{
	"name": "@segfaultx/services/game",
	"scripts": {
		"build": "npx tsc && npx tsc-alias -p tsconfig.json",
		"start": "npm run build && node ./dist/src/service-boostrap.js",
		"debug": "npm run build && node --env-file=../services-debug.env ./dist/service-boostrap.js",
		"inspect": "npm run build && node --inspect-brk ./dist/src/service-boostrap.js",
		"test": "npm run build && npx jasmine",
		"test-serverup": "npm run build && JASMINE_DEV=true npx jasmine",
		"debug-test": "npm run build && node --inspect-wait node_modules/.bin/jasmine",
		"clean": "rm -rf node_modules dist"
	},
	"dependencies": {
		"@fastify/websocket": "^11.0.2",
		"fastify": "^5.2.2",
		"@segfaultx/observable": "../../lib/observable"
	},
	"devDependencies": {
		"@types/jasmine": "^5.1.7",
		"@types/node": "^22.14.0",
		"@types/ws": "^8.18.1",
		"jasmine": "^5.6.0",
		"tsc-alias": "^1.8.15",
		"typescript": "^5.8.3"
	}
}
